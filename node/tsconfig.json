{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "types": ["node"],
    "outDir": "./dist",
    "incremental": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules/**/*"]
}
