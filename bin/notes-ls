#!/usr/bin/env bash

set -eo pipefail
[ "${TRACE:-}" ] && set -x

usage() {
  echo "usage:
  $(basename "$0") [--all]"
}

opt_all=0
for i in "$@"; do
  case "$i" in
    --all)
      opt_all=1
      shift
      ;;
    *)
      echo "Unknown argument: $i"
      usage
      exit 1
      ;;
  esac
done

dirs=()
if [ -d "$NOTES_HOME" ]; then
  dirs+=("$NOTES_HOME")
fi
if [ -d "$NOTES_WORK" ]; then
  dirs+=("$NOTES_WORK")
fi
dirs+=("$NOTES_SHARED")

args=()
if [ $opt_all -eq 0 ]; then
  args+=(--extension txt --extension json --extension xml)
else
  args+=(--no-ignore)
fi

fd --type file "${args[@]}" . "${dirs[@]}" \
  | sed "s|^$HOME|~|"
