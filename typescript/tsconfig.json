{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2019",
    "types": ["node"],
    "typeRoots": ["./types"],
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules/**/*"]
}
